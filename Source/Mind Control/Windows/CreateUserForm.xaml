<Window x:Class="Mind_Control.Windows.CreateUserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateUserForm" Height="133.6" Width="310.4">
    <UniformGrid Margin="0,0,0,-5">
        <StackPanel Margin="25">
            <TextBox  x:Name="NameBox"
                      GotFocus="NameBox_OnGotFocus"
        		      TextChanged="NameBox_OnTextChanged"
                      Text="New User"
                      Margin="5"
                      TextAlignment="Center"/>
            <Button x:Name="CreateUser"
            	Content="Create User"
            	Click="CreateUser_OnClick"/>
        </StackPanel>
    </UniformGrid>
</Window>
